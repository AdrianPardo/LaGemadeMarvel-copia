<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adrian.lagemademarvel.ComicViewFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NombreComic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="34dp"
                    android:text="Nombre del comic"
                    android:textColor="@color/BlancoRoto"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/NombrePersonajeComic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="personaje del comic"
                    android:textColor="@color/BlancoRoto"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/NombreComic" />

                <ImageView
                    android:id="@+id/imagencomic"
                    android:layout_width="150dp"
                    android:layout_height="201dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/avengers_icon_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/descripcioncomic"
                    android:layout_width="324dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="24dp"
                    android:text="Descripcion comic"
                    android:textColor="@color/BlancoRoto"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagencomic" />

            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
