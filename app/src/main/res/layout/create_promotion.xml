<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/DarkGrey">

    <TextView
        android:id="@+id/comic_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/DarkGrey"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:contentDescription="comic name"
        android:scaleType="center"
        android:text="Promocionate"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="30sp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NombrePersonajeComic"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Empresa:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    tools:layout_editor_absoluteY="106dp" />

                <TextView
                    android:id="@+id/nombrePersonajeComic2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"

                    android:text="Direccion:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/nombrePersonajeComic3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"

                    android:text="Correo Electronico:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    tools:layout_editor_absoluteY="67dp" />

                <TextView
                    android:id="@+id/nombrePersonajeComic"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"


                    android:text="Telefono:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <TextView
                    android:id="@+id/nombrePersonajeComic4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"


                    android:gravity="center"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <TextView
                    android:id="@+id/nombrePersonajeComic12"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"


                    android:gravity="center"
                    android:text="Lunes:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <TextView
                    android:id="@+id/nombrePersonajeComic18"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"


                    android:gravity="center"
                    android:text="Martes:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <TextView
                    android:id="@+id/nombrePersonajeComic17"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"


                    android:gravity="center"
                    android:text="Miercoles:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <TextView
                    android:id="@+id/nombrePersonajeComic16"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"


                    android:gravity="center"
                    android:text="Jueves:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <TextView
                    android:id="@+id/nombrePersonajeComic15"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"


                    android:gravity="center"
                    android:text="Viernes:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <TextView
                    android:id="@+id/nombrePersonajeComic14"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"


                    android:gravity="center"
                    android:text="Sabado:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <TextView
                    android:id="@+id/nombrePersonajeComic13"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"


                    android:gravity="center"
                    android:text="Domingo:"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/store_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"

                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/store_location"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/store_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/store_number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textColor="@color/BlancoRoto" />

                <TextView
                    android:id="@+id/nombrePersonajeComic5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"


                    android:gravity="center"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imagencomic"
                    app:layout_constraintTop_toBottomOf="@+id/fav_button" />

                <EditText
                    android:id="@+id/lunes"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/Transparent"
                    android:ems="10"
                    android:hint="8:00-13:00, 17:00-21:00"
                    android:inputType="textPersonName"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/martes"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/Transparent"
                    android:ems="10"
                    android:hint="8:00-13:00, 17:00-21:00"
                    android:inputType="textPersonName"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/miercoles"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/Transparent"
                    android:ems="10"
                    android:hint="8:00-13:00, 17:00-21:00"
                    android:inputType="textPersonName"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/jueves"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/Transparent"
                    android:ems="10"
                    android:hint="8:00-13:00, 17:00-21:00"
                    android:inputType="textPersonName"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/viernes"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/Transparent"
                    android:ems="10"
                    android:hint="8:00-13:00, 17:00-21:00"
                    android:inputType="textPersonName"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/sabado"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/Transparent"
                    android:ems="10"
                    android:hint="8:00-13:00, 17:00-21:00"
                    android:inputType="textPersonName"
                    android:textColor="@color/BlancoRoto" />

                <EditText
                    android:id="@+id/domingo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/Transparent"
                    android:ems="10"
                    android:hint="Cerrado"
                    android:inputType="textPersonName"
                    android:textColor="@color/BlancoRoto" />

            </LinearLayout>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>